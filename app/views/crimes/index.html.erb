<p id="notice"><%= notice %></p>

<h1>Crimes</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Description</th>
      <th>Happened at</th>
      <th>Address</th>
      <th>Address reference</th>
      <th>Reporter ip</th>
      <th>Reporter user agent</th>
      <th>Reporter</th>
      <th>Reporter victim relationship category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crimes.each do |crime| %>
      <tr>
        <td><%= crime.category %></td>
        <td><%= crime.title %></td>
        <td><%= crime.description %></td>
        <td><%= crime.happened_at %></td>
        <td><%= crime.address %></td>
        <td><%= crime.address_reference %></td>
        <td><%= crime.reporter_ip %></td>
        <td><%= crime.reporter_user_agent %></td>
        <td><%= crime.reporter_id %></td>
        <td><%= crime.reporter_victim_relationship_category %></td>
        <td><%= link_to 'Show', crime %></td>
        <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
        <td><%= link_to 'Destroy', crime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="map" style="width: 100%; height: 400px"></div>
<br>

